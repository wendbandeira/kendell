<h1>Listing cargos</h1>

<table>
  <tr>
    <th>Nome</th>
  </tr>

<% @cargos.each do |cargo| %>
  <tr>
    <td><%=h cargo.nome %></td>
    <td><%= link_to 'Show', cargo %></td>
    <td><%= link_to 'Edit', edit_cargo_path(cargo) %></td>
    <td><%= link_to 'Destroy', cargo, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New cargo', new_cargo_path %>