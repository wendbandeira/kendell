<h1>Listing funcionarios</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Login</th>
    <th>Senha</th>
    <th>Endereco</th>
    <th>Telefone</th>
    <th>Data entrada</th>
    <th>Status</th>
    <th>Cargo</th>
    <th>Cidade</th>
  </tr>
<% unless @funcionarios.blank? %>
<% @funcionarios.each do |funcionario|  %>
  <tr>
    <td><%=h funcionario.nome %></td>
    <td><%=h funcionario.login %></td>
    <td><%=h funcionario.senha %></td>
    <td><%=h funcionario.endereco %></td>
    <td><%=h funcionario.telefone %></td>
    <td><%=h funcionario.data_entrada %></td> 
    <td><%=h funcionario.status ? "Ativo" : "Inativo" %></td>
    <td><%=h funcionario.cargo.nome if funcionario.cargo %></td>
    <td><%=h funcionario.cidade.nome if funcionario.cidade %></td>
    <td><%= link_to 'Mostrar', funcionario %></td>
    <td><%= link_to 'Editar', edit_funcionario_path(funcionario) %></td>
    <td><%= link_to 'Remover', funcionario, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<% end %>

